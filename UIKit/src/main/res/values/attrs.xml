<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Rotate3dAnimation">
        <attr name="rollType" format="enum">
            <enum name="x" value="0"/>
            <enum name="y" value="1"/>
            <enum name="z" value="2"/>
        </attr>
        <attr name="fromDeg" format="float" />
        <attr name="toDeg" format="float" />
        <attr name="pivotX" format="fraction"/>
        <attr name="pivotY" format="fraction" />
    </declare-styleable>

    <!--圆形进度条-->
    <declare-styleable name="CircleProgressBar">
        <attr name="radius" format="dimension"/>
        <attr name="stroke_wide" format="dimension"/>
        <attr name="text_size" format="dimension"/>
        <attr name="text_color" format="color"/>
        <attr name="color_stroke" format="color"/>
        <attr name="color_progress" format="color"/>
        <attr name="color_inner" format="color"/>
        <attr name="progress_max" format="integer"/>
        <attr name="progress" format="integer"/>
    </declare-styleable>


    <!--下载圆环进度条-->
    <declare-styleable name="CircleProgressView">
        <attr name="backWidth" format="dimension" />    <!--背景圆环宽度-->
        <attr name="progWidth" format="dimension" />    <!--进度圆环宽度-->
        <attr name="backColor" format="color" />        <!--背景圆环颜色-->
        <attr name="progColor" format="color" />        <!--进度圆环颜色-->
        <attr name="progStartColor" format="color" />   <!--进度圆环开始颜色-->
        <attr name="progFirstColor" format="color" />   <!--进度圆环结束颜色-->
        <attr name="progressForCircle" format="integer" />       <!--圆环进度-->
    </declare-styleable>

    <declare-styleable name="RedView">
        <attr name="redTipsVisibility">
            <enum name="red_invisible" value="0"></enum>
            <enum name="red_visible" value="1"></enum>
            <enum name="red_gone" value="2"></enum>
        </attr>
    </declare-styleable>
</resources>